<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <!-- Login Linear Layout -->
  <!--
  Design Complexity: fragment_login
  A Linear Layout is used for the Login screen because the items are
  positioned in a single centered column.
  -->
  <LinearLayout
    style="@style/styleLinearLayoutLoginFragment"
    tools:context=".ui.login.LoginFragment">

    <!-- Username EditText Field -->
    <EditText
      android:id="@+id/edit_username"
      style="@style/styleEditEmailLoginFragment"
      android:autofillHints="@string/login_prompt_email"
      android:hint="@string/login_prompt_email"
      android:imeActionLabel="@string/login_action_login"
      android:inputType="textEmailAddress" />

    <!-- Register Button -->
    <EditText
      android:id="@+id/edit_password"
      style="@style/styleEditPasswordLoginFragment"
      android:autofillHints="@string/login_prompt_password"
      android:hint="@string/login_prompt_password"
      android:inputType="textPassword" />

    <!-- Password EditText Field -->
    <Button
      android:id="@+id/button_register"
      style="@style/styleButtonRegister" />

    <!-- Login Button -->
    <Button
      android:id="@+id/button_login"
      style="@style/styleButtonLogin" />

  </LinearLayout>
</layout>
