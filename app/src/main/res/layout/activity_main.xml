<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    style="@style/styleConstraintLayoutActivityMain"
    tools:context=".MainActivity">

    <!-- Fragment Container -->
    <androidx.fragment.app.FragmentContainerView
      android:id="@+id/nav_host_fragment_container_main"
      style="@style/styleFragmentContainerActivityMain"
      app:defaultNavHost="true"
      app:layout_constrainedHeight="true"
      app:layout_constrainedWidth="true"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/app_bar_main"
      app:navGraph="@navigation/nav_graph" />

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
      android:id="@+id/app_bar_main"
      style="@style/styleAppBarActivityMain"
      app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment_container_main"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <!-- Toolbar -->
      <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/styleToolbarActivityMain"
        app:popupTheme="@style/Theme.ShoeStoreInventory.PopupOverlay" />
    </com.google.android.material.appbar.AppBarLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

