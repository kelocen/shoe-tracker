<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <!-- Login Constraint Layout -->
  <androidx.constraintlayout.widget.ConstraintLayout
    style="@style/styleConstraintLayoutLoginFragment"
    tools:context=".ui.login.LoginFragment">

    <!-- Login Button -->
    <Button
      android:id="@+id/button_login"
      style="@style/styleButtonLogin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edit_password" />

    <!-- Register Button -->
    <Button
      android:id="@+id/button_register"
      style="@style/styleButtonRegister"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/button_login" />

    <!-- Password EditText Field -->
    <EditText
      android:id="@+id/edit_password"
      style="@style/styleEditLoginFragment"
      android:autofillHints="@string/prompt_password"
      android:hint="@string/prompt_password"
      android:inputType="textPassword"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/edit_username" />

    <!-- Username EditText Field -->
    <EditText
      android:id="@+id/edit_username"
      style="@style/styleEditLoginFragment"
      android:autofillHints="@string/prompt_email"
      android:hint="@string/prompt_email"
      android:imeActionLabel="@string/action_login"
      android:inputType="textEmailAddress"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
