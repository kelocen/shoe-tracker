<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.ShoeStoreInventory" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryVariant">@color/color_primary_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/color_secondary</item>
    <item name="colorSecondaryVariant">@color/color_secondary_light</item>
    <item name="colorOnSecondary">@color/white</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="android:fontFamily">@font/gudea_bold</item>
  </style>
  <!-- = = = = = Main Fragment = = = = = -->
  <!-- Constraint Layout -->
  <style name="styleConstraintLayoutActivityMain" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/color_screen_background</item>
  </style>
  <!-- Fragment Container View -->
  <style name="styleFragmentContainerActivityMain" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:name">androidx.navigation.fragment.NavHostFragment</item>
  </style>
  <!-- App Bar -->
  <style name="styleAppBarActivityMain" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:theme">@style/Theme.ShoeStoreInventory.AppBarOverlay</item>
  </style>
  <!-- Toolbar -->
  <style name="styleToolbarActivityMain" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">?attr/actionBarSize</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">?attr/colorPrimary</item>
  </style>
  <!-- = = = = = Login Fragment = = = = = -->
  <!-- Email EditText View -->
  <style name="styleEditEmailLoginFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/general_dimen_zero_height_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:imeOptions">actionDone</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:textAlignment">center</item>
  </style>
  <!-- Password EditText View-->
  <style name="styleEditPasswordLoginFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/general_dimen_zero_height_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/login_view_margin_top</item>
    <item name="android:imeOptions">actionDone</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:textAlignment">center</item>
  </style>
  <!-- LoginFragment login/register buttons -->
  <style name="styleButtonParentLoginFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/general_dimen_zero_height_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/login_view_margin_top</item>
    <item name="android:enabled">true</item>
    <item name="android:textAllCaps">true</item>
  </style>
  <!-- Login button -->
  <style name="styleButtonLogin" parent="styleButtonParentLoginFragment">
    <item name="android:text">@string/login_action_login</item>
  </style>
  <!-- Register button -->
  <style name="styleButtonRegister" parent="styleButtonParentLoginFragment">
    <item name="android:text">@string/login_action_register</item>
  </style>
  <!-- = = = = = Welcome Fragment = = = = = -->
  <!-- Scroll View -->
  <style name="styleScrollViewWelcomeFragment" parent="styleParentLayout">
    <item name="android:fillViewport">true</item>
  </style>
  <!-- Constraint Layout -->
  <style name="styleConstraintLayoutWelcomeFragment">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!-- Shoe Tracker Logo -->
  <style name="styleImageShoeTrackerLogo" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">@dimen/welcome_logo_height</item>
    <item name="android:layout_width">@dimen/welcome_logo_width</item>
    <item name="android:scaleType">fitCenter</item>
    <item name="android:src">@drawable/shoe_tracker_logo</item>
    <item name="android:layout_marginTop">@dimen/welcome_logo_margin_top</item>
    <!--
      File Name: shoe_tracker_logo.png
      Original Name: athletic-shoes-25493_640.png
      Location: https://pixabay.com/vectors/athletic-shoes-shoes-sneakers-25493/
      Artist/Owner: OpenClipart-Vectors
      Date: 2/23/2021
      License: https://pixabay.com/service/license/
    -->
  </style>
  <!-- Continue TextView -->
  <style name="styleTextContinueMessage" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/welcome_continue_message_margin_top</item>
    <item name="android:text">@string/welcome_message_continue</item>
    <item name="android:textSize">@dimen/welcome_continue_text_size</item>
  </style>
  <!-- = = = = = Instructions Fragment = = = = = -->
  <style name="styleScrollViewInstructionsFragment" parent="styleParentLayout">
    <item name="android:fillViewport">true</item>
  </style>
  <!-- How-to TextView-->
  <style name="styleTextHowToInstructionsFragment">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">@string/instructions_text_title_text</item>
    <item name="android:textSize">@dimen/instructions_title_text_size</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/black</item>
  </style>
  <!-- Step 1 TextView -->
  <style name="styleTextStepOneInstructionsFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/instructions_step_label_text_size</item>
    <item name="android:text">@string/instructions_label_step_one</item>
    <item name="android:layout_marginTop">@dimen/instructions_step_label_margin_top</item>
  </style>
  <!-- Step 1 Message TextView -->
  <style name="styleTextStepOneMessageInstructionsFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/instructions_step_message_text_size</item>
    <item name="android:text">Click the add button on the Listing screen.</item>
    <item name="android:layout_marginTop">@dimen/instructions_view_separator_margin_top</item>
  </style>
  <!-- Step One Image -->
  <style name="styleImageStepOneInstructionsFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/instructions_image_step_one_width</item>
    <item name="android:layout_height">@dimen/instructions_image_step_one_height</item>
    <item name="android:layout_marginBottom">@dimen/listing_floating_button_margin_bottom</item>
    <item name="android:src">@drawable/step_one_add</item>
    <item name="android:layout_marginTop">@dimen/instructions_view_separator_margin_top</item>
  </style>
  <!-- Step 2 TextView -->
  <style name="styleTextStepTwoInstructionsFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/instructions_step_label_text_size</item>
    <item name="android:text">@string/instructions_label_step_two</item>
    <item name="android:layout_marginTop">@dimen/instructions_step_two_margin_top</item>
  </style>
  <!-- Step 2 Message TextView -->
  <style name="styleTextStepTwoMessageInstructionsFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">@dimen/instructions_step_message_text_size</item>
    <item name="android:text">Fill in the blanks and click save.</item>
    <item name="android:layout_marginTop">@dimen/instructions_view_separator_margin_top</item>
  </style>
  <!-- Step Two Image -->
  <style name="styleImageStepTwoInstructionsFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/instructions_image_step_two_width</item>
    <item name="android:layout_height">@dimen/instructions_image_step_two_height</item>
    <item name="android:layout_marginBottom">@dimen/listing_floating_button_margin_bottom</item>
    <item name="android:src">@drawable/step_two_save</item>
    <item name="android:layout_marginTop">@dimen/instructions_view_separator_margin_top</item>
  </style>
  <!-- = = = = = Listing Fragment = = = = = -->
  <!-- Constraint Layout -->
  <style name="styleConstraintLayoutListingFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:paddingStart">@dimen/fragment_parent_layout_padding</item>
    <item name="android:paddingEnd">@dimen/fragment_parent_layout_padding</item>
    <item name="android:background">@color/color_screen_background</item>
  </style>
  <!-- Scroll View -->
  <style name="styleScrollViewListingFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <!-- Linear Layout -->
  <style name="styleLinearLayoutListingFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:orientation">vertical</item>
  </style>
  <!-- Floating Button -->
  <style name="styleFloatingButtonListingFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">@dimen/listing_floating_button_margin_bottom</item>
    <item name="android:src">@drawable/ic_add_button</item>
  </style>
  <!-- = = = = = Details Fragment = = = = = -->
  <!-- Constraint Layout -->
  <style name="styleConstraintLayoutDetailsFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>
  <!-- Column Guideline -->
  <style name="styleGuidelineDetailsFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:orientation">vertical</item>
  </style>
  <!-- Save Button -->
  <style name="styleButtonSave" parent="styleButtonParent">
    <item name="android:text">@string/details_action_save</item>
    <item name="android:layout_marginBottom">@dimen/details_buttons_margin_bottom</item>
  </style>
  <!-- Cancel Button -->
  <style name="styleButtonCancel" parent="styleButtonParent">
    <item name="android:text">@string/details_action_cancel</item>
    <item name="android:layout_marginBottom">@dimen/details_buttons_margin_bottom</item>
  </style>
  <!-- Label Text View -->
  <style name="styleTextParentLabel" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_marginStart">@dimen/details_label_margin_start</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- Manufacturer Label -->
  <style name="styleTextShoeManufacturer" parent="styleTextParentLabel">
    <item name="android:text">@string/details_label_shoe_manufacturer</item>
  </style>
  <!-- Shoe Name Label -->
  <style name="styleTextShoeName" parent="styleTextParentLabel">
    <item name="android:text">@string/details_label_shoe_name</item>
  </style>
  <!-- Shoe Size Label -->
  <style name="styleTextShoeSize" parent="styleTextParentLabel">
    <item name="android:text">@string/details_label_shoe_size</item>
  </style>
  <!-- Shoe Description Label -->
  <style name="styleTextShoeDescription" parent="styleTextParentLabel">
    <item name="android:text">@string/details_label_shoe_description</item>
  </style>
  <!-- Parent EditText View -->
  <style name="styleEditParentInput" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/general_dimen_zero_height_width</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_marginStart">@dimen/details_edit_margin_start_end</item>
    <item name="android:layout_marginEnd">@dimen/details_edit_margin_start_end</item>
  </style>
  <!-- Manufacturer EditText View -->
  <style name="styleEditShoeManufacturer" parent="styleEditParentInput">
    <item name="android:inputType">text</item>
  </style>
  <!-- Shoe Name EditText View -->
  <style name="styleEditShoeName" parent="styleEditParentInput">
    <item name="android:inputType">text</item>
  </style>
  <!-- Shoe Size EditText View -->
  <style name="styleEditShoeSize" parent="styleEditParentInput">
    <item name="android:inputType">numberDecimal</item>
  </style>
  <!-- Shoe Description EditText View -->
  <style name="styleEditShoeDescription" parent="styleEditParentInput">
    <item name="android:inputType">text</item>
  </style>
  <!-- = = = = = Shoe Item Layout = = = = = -->
  <!-- Constraint Layout -->
  <style name="styleConstraintLayoutShoeItem" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/color_screen_background</item>
  </style>
  <!-- Cardview -->
  <style name="styleCardviewShoeItem" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginBottom">@dimen/item_cardview_bottom_margin</item>
    <item name="android:elevation">@dimen/item_cardview_elevation</item>
    <item name="android:gravity">center</item>
    <item name="android:backgroundTint">@color/color_cardview_background</item>
  </style>
  <!-- CardView Background Square-->
  <style name="styleImageCardViewShapeTop" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/general_dimen_zero_height_width</item>
    <item name="android:layout_height">@dimen/general_dimen_zero_height_width</item>
    <item name="android:src">@drawable/shape_card_top</item>
    <item name="android:scaleType">centerCrop</item>
  </style>
  <!-- CardView Background Square-->
  <style name="styleImageCardViewShapeStart" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/general_dimen_zero_height_width</item>
    <item name="android:layout_height">@dimen/general_dimen_zero_height_width</item>
    <item name="android:src">@drawable/shape_card_start</item>
    <item name="android:scaleType">centerCrop</item>
  </style>
  <!-- Parent Shoe Item TextView -->
  <style name="styleTextShoeItem" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- Shoe Item Manufacturer -->
  <style name="styleTextShoeItemManufacturer" parent="styleTextShoeItem">
    <item name="android:textSize">@dimen/item_manufacturer_text_size</item>
    <item name="android:text">@string/item_default_text_shoe_manufacturer</item>
    <item name="android:layout_marginStart">@dimen/item_manufacturer_margin_start</item>
  </style>
  <!-- Shoe Item Name -->
  <style name="styleTextShoeItemName" parent="styleTextShoeItem">
    <item name="android:textSize">@dimen/item_name_text_size</item>
    <item name="android:text">@string/item_default_text_shoe_name</item>
    <item name="android:layout_marginStart">@dimen/item_name_margin_start</item>
  </style>
  <!-- Shoe Item Size Label -->
  <style name="styleTextShoeItemSizeLabel" parent="styleTextShoeItem">
    <item name="android:textSize">@dimen/item_label_size_text_size</item>
    <item name="android:text">@string/item_label_shoe_size</item>
    <item name="android:layout_marginTop">@dimen/item_label_size_margin_top</item>
  </style>
  <!-- Shoe Item Size -->
  <style name="styleTextShoeItemSize" parent="styleTextShoeItem">
    <item name="android:textSize">@dimen/item_size_text_size</item>
    <item name="android:text">@string/item_default_text_shoe_size</item>
  </style>
  <!-- Shoe Item Description Label -->
  <style name="styleTextShoeItemDescriptionLabel" parent="styleTextShoeItem">
    <item name="android:layout_width">@dimen/general_dimen_zero_height_width</item>
    <item name="android:textSize">@dimen/item_description_text_size</item>
    <item name="android:text">@string/item_label_shoe_description</item>
    <item name="android:layout_marginStart">@dimen/item_description_label_margin_start</item>
    <item name="android:layout_marginTop">@dimen/item_description_label_margin_top</item>
  </style>
  <!-- Shoe Item Description -->
  <style name="styleTextShoeItemDescription" parent="styleTextShoeItem">
    <item name="android:layout_width">@dimen/general_dimen_zero_height_width</item>
    <item name="android:textSize">@dimen/item_description_text_size</item>
    <item name="android:text">@string/item_default_text_shoe_description</item>
    <item name="android:layout_marginStart">@dimen/item_description_margin_start_end</item>
    <item name="android:layout_marginEnd">@dimen/item_description_margin_start_end</item>
  </style>
  <!-- = = = = = Shared Styles = = = = = -->
  <!-- Parent Layout -->
  <style name="styleParentLayout" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:background">@color/color_screen_background</item>
    <item name="android:paddingStart">@dimen/fragment_parent_layout_padding</item>
    <item name="android:paddingEnd">@dimen/fragment_parent_layout_padding</item>
    <item name="android:paddingTop">@dimen/fragment_parent_layout_padding</item>
  </style>
  <!-- App Name TextView -->
  <!-- Parent Button Style -->
  <style name="styleButtonParent" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAllCaps">true</item>
  </style>
  <!-- Continue Button -->
  <style name="styleButtonContinue" parent="styleButtonParent">
    <item name="android:text">@string/action_continue</item>
    <item name="android:layout_marginTop">@dimen/button_continue_margin_top</item>
    <item name="android:layout_marginBottom">@dimen/button_continue_margin_bottom</item>
  </style>
  <!-- Action Bar -->
  <style name="Theme.ShoeStoreInventory.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <!-- App Bar Overlay -->
  <style name="Theme.ShoeStoreInventory.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
  <!-- Popup Overlay -->
  <style name="Theme.ShoeStoreInventory.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:backgroundTint">@color/color_screen_background</item>
  </style>
</resources>