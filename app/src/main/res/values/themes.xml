<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.ShoeStoreInventory" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryVariant">@color/color_primary_dark</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/color_secondary</item>
    <item name="colorSecondaryVariant">@color/color_secondary_light</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
  </style>
  <!-- = = = = = Login Fragment = = = = = -->
  <!-- LoginFragment edit text fields -->
  <style name="styleEditLoginFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/zeroHeightWidth</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/loginFragmentViewMarginTop</item>
    <item name="android:layout_marginStart">@dimen/loginFragmentViewMarginStart</item>
    <item name="android:layout_marginEnd">@dimen/loginFragmentViewMarginEnd</item>
    <item name="android:imeOptions">actionDone</item>
    <item name="android:selectAllOnFocus">true</item>
    <item name="android:textAlignment">center</item>
  </style>
  <!-- LoginFragment login/register buttons -->
  <style name="styleButtonParentLoginFragment" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/zeroHeightWidth</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/loginFragmentViewMarginTop</item>
    <item name="android:layout_marginStart">@dimen/loginFragmentViewMarginStart</item>
    <item name="android:layout_marginEnd">@dimen/loginFragmentViewMarginEnd</item>
    <item name="android:enabled">true</item>
    <item name="android:textAllCaps">true</item>
  </style>
  <!-- Login button -->
  <style name="styleButtonLogin" parent="styleButtonParentLoginFragment">
    <item name="android:text">@string/action_login</item>
  </style>
  <!-- Register button -->
  <style name="styleButtonRegister" parent="styleButtonParentLoginFragment">
    <item name="android:text">@string/action_register</item>
  </style>
  <!-- = = = = = Welcome Fragment = = = = = -->
  <!-- Welcome TextView -->
  <style name="styleTextWelcomeMessage" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">@string/text_welcome_message</item>
  </style>
  <!-- = = = = = Instructions Fragment = = = = = -->
  <!-- Instructions TextView -->
  <style name="styleTextInstructionsMessage" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">@string/text_instructions_message</item>
  </style>
  <!-- = = = = = Listing Fragment = = = = = -->
  <!-- Floating Button -->
  <style name="styleFloatingButtonAdd" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">@dimen/floating_button_margin_bottom</item>
    <item name="android:layout_marginEnd">@dimen/floating_button_margin_end</item>
  </style>
  <!-- = = = = = Details Fragment = = = = = -->
  <!-- Save Button -->
  <style name="styleButtonSave" parent="styleButtonParent">
    <item name="android:text">@string/action_save</item>
    <item name="android:layout_marginBottom">@dimen/details_buttons_margin_bottom</item>
  </style>
  <!-- Cancel Button -->
  <style name="styleButtonCancel" parent="styleButtonParent">
    <item name="android:text">@string/action_cancel</item>
    <item name="android:layout_marginBottom">@dimen/details_buttons_margin_bottom</item>
  </style>
  <!-- Label Text View -->
  <style name="styleTextParentLabel" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_marginStart">@dimen/details_label_margin_start</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
  </style>
  <!-- Manufacturer Label -->
  <style name="styleTextShoeManufacturer" parent="styleTextParentLabel">
    <item name="android:text">Brand/Manufacturer:</item>
  </style>
  <!-- Shoe Name Label -->
  <style name="styleTextShoeName" parent="styleTextParentLabel">
    <item name="android:text">Name/Model:</item>
  </style>
  <!-- Shoe Size Label -->
  <style name="styleTextShoeSize" parent="styleTextParentLabel">
    <item name="android:text">Size:</item>
  </style>
  <!-- Shoe Description Label -->
  <style name="styleTextShoeDescription" parent="styleTextParentLabel">
    <item name="android:text">Description:</item>
  </style>
  <!-- Edit Text View -->
  <style name="styleEditParentInput" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">@dimen/zeroHeightWidth</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_marginStart">@dimen/details_edit_margin_start_end</item>
    <item name="android:layout_marginEnd">@dimen/details_edit_margin_start_end</item>
  </style>
  <!-- Manufacturer Edit Text View -->
  <style name="styleEditShoeManufacturer" parent="styleEditParentInput">
    <item name="android:inputType">text</item>
  </style>
  <!-- Shoe Name Edit Text View -->
  <style name="styleEditShoeName" parent="styleEditParentInput">
    <item name="android:inputType">text</item>
  </style>
  <!-- Shoe Size Edit Text View -->
  <style name="styleEditShoeSize" parent="styleEditParentInput">
    <item name="android:inputType">numberDecimal</item>
  </style>
  <!-- Shoe Description Edit Text View -->
  <style name="styleEditShoeDescription" parent="styleEditParentInput">
    <item name="android:inputType">text</item>
  </style>
  <!-- = = = = = Shoe Item Layout = = = = = -->
  <style name="styleTextShoeItem" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- Shoe Item Manufacturer -->
  <style name="styleTextShoeItemManufacturer" parent="styleTextShoeItem">
    <item name="android:textSize">@dimen/shoe_item_manufacturer_text_size</item>
    <item name="android:layout_marginTop">@dimen/shoe_item_manufacturer_margin_top</item>
    <item name="android:text">@string/label_shoe_manufacturer</item>
  </style>
  <!-- Shoe Item Name -->
  <style name="styleTextShoeItemName" parent="styleTextShoeItem">
    <item name="android:textSize">@dimen/shoe_item_name_text_size</item>
    <item name="android:layout_marginTop">@dimen/shoe_item_name_margin_top</item>
    <item name="android:text">@string/label_shoe_name</item>
  </style>
  <!-- Shoe Item Size -->
  <style name="styleTextShoeItemSize" parent="styleTextShoeItem">
    <item name="android:textSize">@dimen/shoe_item_size_text_size</item>
    <item name="android:text">@string/label_shoe_size</item>
  </style>
  <!-- Shoe Item Description -->
  <style name="styleTextShoeItemDescription" parent="styleTextShoeItem">
    <item name="android:textSize">@dimen/shoe_item_description_text_size</item>
    <item name="android:text">@string/label_shoe_description</item>
  </style>
  <!-- = = = = = Shared Styles = = = = = -->
  <!-- App Name TextView -->
  <style name="styleTextAppName" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:text">@string/app_name</item>
  </style>
  <!-- Parent Button Style -->
  <style name="styleButtonParent" parent="Theme.ShoeStoreInventory">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textAllCaps">true</item>
  </style>
  <!-- Continue Button -->
  <style name="styleButtonContinue" parent="styleButtonParent">
    <item name="android:text">@string/action_continue</item>
  </style>
  <!-- Action Bar -->
  <style name="Theme.ShoeStoreInventory.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <!-- App Bar Overlay -->
  <style name="Theme.ShoeStoreInventory.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
  <!-- Popup Overlay -->
  <style name="Theme.ShoeStoreInventory.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>